

version: '2'

output: prefixed

vars:
  Product: 'ardan'

tasks:
  default:
    desc: "default task"
    cmds:
      - echo "[Project] {{.Product}}"
      - task: run
    silent: true

  run:
    desc: "go run server"
    dir: cmd/server/
    cmds:
      - echo " ---------------------------------------------------------"
      - echo " -    server running at http://localhost:1234            -"
      - echo " ---------------------------------------------------------"
      - go run main.go
    silent: true

  sync:
    desc: "model sync"
    cmds:
      - echo "model sync"
      - ardan sync
    silent: true
 
  gen:
    desc: "ardan gen"
    cmds:
      - echo "ardan.gen query|repository|service|controller"
      - ardan gen
    silent: true
 
  release:
    desc: "release"
    cmds:
      - echo "release generating..."
      - GOOS=linux go build -ldflags "-w -s" -o ./release/{{.Product}}_{{.GitCommit}} ./cmd/server/main.go
      - echo "release {{.Product}}_{{.GitCommit}}."
    vars:
      GitCommit:
        sh: git describe --always --tags --dirty
    silent: true

  version:
    desc: "version"
    cmds:
      - echo "current version:"
      - git describe --always --tags --dirty
    silent: true

